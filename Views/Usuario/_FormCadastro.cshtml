@model Usuario

<div class="row justify-content-md-center">
    <form asp-action="Cadastro" method="POST" class="col-md-4">

        <input type="hidden" asp-for="Id" required/>

         <div class="form-group">
            <label asp-for="Nome">Nome</label>
            <input asp-for="Nome" class="form-control" required/>
        </div>

        <div class="form-group">
            <label asp-for="Login">Login</label>
            <input asp-for="Login" class="form-control" required/>
        </div>
        <div class="form-group">
            <label asp-for="Senha">Senha</label>
            <input asp-for="Senha" class="form-control" required/>
        </div>

         <div class="form-group">
            <select name="tipo" id="userTipo">
              <option value="@Usuario.ADMIN">Administrador</option>
              <option value="@Usuario.PADRAO">Padr√£o</option>  
            </select>
        </div>
       
        <input type="submit" value="Salvar" class="btn btn-primary"/>
    </form>
</div>