@model CadEmprestimoViewModel
@{
    ViewData["Title"] = "Cadastro de Emprestimos";
}


<style>
     body{
    background: linear-gradient(90deg, rgba(36, 35, 0, 0.837) 0%, rgba(191,142,33,1) 35%,  rgb(106, 76, 11) 100%);
   }
</style>

<body>
<div class="justify-content-md-center bg-dark border border-light rounded">
    <h1 class="row justify-content-md-center text-light">Cadastro de Empréstimo</h1>
    <div class="row justify-content-md-center">
        <form asp-action="Cadastro" method="POST" class="col-md-4">
            <fieldset>
                <legend class="text-light">Usuario</legend>
                <div class="form-group">
                    <label asp-for="Emprestimo.NomeUsuario" class="text-light">Nome</label>
                    <input asp-for="Emprestimo.NomeUsuario" class="form-control" placeholder="Nome"/>
                </div>
                <div class="form-group">
                    <label asp-for="Emprestimo.Telefone" class="text-light">Telefone</label>
                    <input asp-for="Emprestimo.Telefone" class="form-control" placeholder="00-0000-0000"/>
                </div>
            </fieldset>
            <fieldset>
                <legend class="text-light">Livro</legend>
                <div class="form-group">
                    <label asp-for="Emprestimo.DataEmprestimo" class="text-light">Data de Empréstimo</label>
                    <input type="date" asp-for="Emprestimo.DataEmprestimo" class="form-control"/>
                </div>
                <div class="form-group">
                    <label asp-for="Emprestimo.DataDevolucao" class="text-light">Data de Devolução</label>
                    <input type="date" asp-for="Emprestimo.DataDevolucao" class="form-control"/>
                </div>
                <div class="form-group">
                    <label asp-for="Emprestimo.LivroId" class="text-light">Livro</label>
                    <select asp-for="Emprestimo.LivroId" class="form-control">
                        @foreach(Livro l in Model.Livros)
                        {
                            <option value="@l.Id">@l.Titulo</option>
                        }
                    </select>
                </div>
            </fieldset>
            <input type="submit" value="Salvar" class="btn btn-outline-warning"/>
        </form>
</div>
</body>